pipeline{
    agent any

    environment{
        IMAGE_NAME = "akshathasbhat/page:${GIT_COMMIT}"
    }

    stages{
        stage('Git-Checkout'){
            steps{
                git url: 'https://github.com/akshathasbhat020-gif/ARU.git', branch: 'app'
            }
        }
        stage('Build-stage'){
            steps{
                sh'''
                printenv
                Docker build -t ${IMAGE_NAME} .
                '''
            }
        }
        stage('Testing-stage'){
            steps{
                sh'''
                Docker run -it -d --name page -p 80:80 ${IMAGE_NAME}
                '''
            }
        }
    }
}